<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Url Shortner Sever</title>
</head>

<body>
    <div class="container">
        <h1>Url Shortner Server</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullurl" class="sr-only">Url</label>
            <input required class="form-control mr-2 col" placeholder="Url" type="text" name="fullurl" id="fullurl">
            <button class="btn btn-primary" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <td>Full Url</td>
                    <td>Short Url</td>
                    <td>Clicks</td>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(short => {%>
                    <tr>
                        <td><a href="<%= short.full %>"><%= short.full %></a></td>
                        <td><a href="<%= short.short %>"><%= short.short%></a></td>
                        <td><a href="<%= short.clicks %>"><%= short.clicks%></a></td>
                    </tr>
                    <%}) %>
                <!-- <tr>
                    <td><a href="https://ar-url.vercel.app">https://ar-url.vercel.appthis this thtiksiiksdfskldf</a></td>
                    <td><a href="/">not available</a></td>
                    <td>1</td>
                </tr> -->
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>